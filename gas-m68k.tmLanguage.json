{
	"scopeName": "source.s.gas-m68k",
	"patterns": [{ "include": "#expression" }],
	"repository": {
		"expression": {
			"patterns": [
				{"name": "comment.line.number-sign", "match": "^\\s*#.*"},
				{"name": "comment.block", "match": "/\\*.*\\*/"},
				{"name": "keyword", "match": "\\babcd(\\.[b])?\\b"},
				{"name": "keyword", "match": "\\badd[aiqx]?(\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\band[i]?(\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\bmove[q]?(\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\b[al]s[lr](\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\bb(ra|sr|ne|eq|lt|gt)(\\.[bw])?\\b"},
				{"name": "keyword", "match": "\\bb(chng|clr|set|tst)(\\.[bl])?\\b"},
				{"name": "keyword", "match": "\\bchk(\\.[w])?\\b"},
				{"name": "keyword", "match": "\\bclr(\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\bcmp[aim]?(\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\bdb(f)(\\.[w])?\\b"},
				{"name": "keyword", "match": "\\bdiv[su](\\.[w])?\\b"},
				{"name": "keyword", "match": "\\beor[i]?(\\.[bwl])?\\b"},
				{"name": "keyword", "match": "\\bexg(\\.[l])?\\b"},
				{"name": "keyword", "match": "\\bext(\\.[wl])?\\b"},
				{"name": "keyword", "match": "\\billegal\\b"},
				{"name": "keyword", "match": "\\bj(mp|sr)\\b"},
				{"name": "keyword", "match": "\\blea(\\.[l])?\\b"},
				{"name": "constant.numeric", "match": "\\W#?-?[0-9]+\\b"},
				{"name": "constant.numeric", "match": "\\W#?-?0x[0-9A-F]+\\b"},
				{"name": "variable.language", "match": "%[da][0-7]\\b"},
				{"name": "variable.language", "match": "%(sp|fp)\\b"},
				{"name": "variable", "match": "\\w+:"},
				{}
			]
		},
		"":""
	}
}
